{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "dist"
  ],
  "rules": {
    "arrow-parens": "off",
    "class-methods-use-this": "off",
    "comma-dangle": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "prefer-destructuring": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  }
}
